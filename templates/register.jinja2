{% extends "base.jinja2" %}
{% block body %}
<div class="container" style="width: 970px !important;">
    <h2 class="titles">Sign Up</h2>
    <div class="well">
        <form action="{{ request.route_url('register_view') }}" method="POST" onsubmit="return checkform(this);">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" aria-label="..." required pattern="[a-zA-Z0-9]+"/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" aria-label="..."/>
            </div>
            <div class="form-group">
                <label for="password">Re-Type Password</label>
                <input type="password" id="password_again" name="password_again" class="form-control" aria-label="..."/>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" aria-label="..."/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}