{% extends "base.jinja2" %}
{% block body %}
<div class="container" style="width: 970px !important;">
    <div class="row">
        <h2 class="scroll_right" style="font-family: verdana; margin-top: 40px">{{ today }}</h2><h2 class="titles scroll_left" style="margin-top: 40px">{{ date.strftime('%A') }}</h2>
    </div>
    {% for event in events %}
    <div class="row">
        <div class="panel panel-success" data-start-time="{{ event [0] }}" data-end-time="{{ event[1] }}">
            <div class="panel-heading">
                <h3 class="panel-title">{{ event[0] }} - {{ event[1] }}</h3>
            </div>
            <div class="panel-body">
                {{ event[2] }}
            </div>
        </div>
    </div>
    {% else %}
    <div class="row">
        <div class="col-md-6">
            <h4>No Events Today!</h4>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}

