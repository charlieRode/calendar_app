{ % extends "base.jinja2" %}
{% block body %}
    <h2>The Day (Add day context after successful implementation of event context...)</h2>
    {% for event in events %}
    <article class="event" id="event={{event.id}}">
        <h3>{{ event.time }}: {{ event.description|safe }}</h3>
    </article>
    {% else %}
    <div class="event">
        <p><em>No events today!</em></p>
    </div>
    {% endfor %}
{% endblock %}

