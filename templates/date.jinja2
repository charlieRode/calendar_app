{% extends "base.jinja2" %}
{% block body %}
<div class="container">
    <h2 style="color: #337ab7;">{{ readable_date }}</h2>
    <table class="table table-striped">
        {% for event in events %}
        <tr>
            <td width="30%">{{ event[0] }} - {{ event[1] }}</td>
            <td width="60%">{{ event[2] }}</td>
            <td width="10%">
                <form action="{{request.route_url('delete')}}" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="date" value="{{ date }}"/>
                        <!-- <button type="button" value="{{ event[2] }}" name="description" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                        </button> -->
                        <button type="button" data-toggle="modal" data-target=".del" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                        </button>
                    </div>
                </form>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
<aside>
    <div class="container">
        <div class="well">
            <form action="{{request.route_url('add')}}" method="POST">
                <input type="hidden" name="date" value="{{ date }}"/>
                <div class="form-group">
                    <label for="description">Add Event</label>
                    <input id="description" type="text" class="form-control" aria-label="..." placeholder="Event description" name="description"/>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <!-- Button and dropdown menu -->
                        <label for="time">Start Time - End Time</label>
                        <div class="bfh-timepicker" data-mode="12h" data-time="12:00" data-name="time" id="time"></div>
                        <div class="bfh-timepicker" data-mode="12h" data-time="12:00" data-name="time_end" id="time_end"></div>
                        <div class="input-group-btn">
                        <div class="btn-group">
                          <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">Repeat <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                              <li><input type="radio" id="never" name="repeat" value="never"><label for="never">Never</label></li>
                              <li><input type="radio" id="daily" name="repeat" value="daily"><label for="daily">Daily</label></li>
                              <li><input type="radio" id="weekly" name="repeat" value="weekly"><label for="weekly">Every week</label></li>
                              <li><input type="radio" id="eoweek" name="repeat" value="biweekly"><label for="eoweek">Every other week</label></li>
                              <li><input type="radio" id="monthly" name="repeat" value="monthly"><label for="monthly">Every month</label></li>
                            </ul>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                      </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

<div class="modal fade del">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header"><h5 class="modal-title">Repeat Event</h5></div>
        <div class="modal-body">
            <p>This is a repeating event. Do you want to delete every instance of it?</p>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Yes, delete all instances of this event</button>
            <button type="submit" class="btn btn-primary">No, just delete this event for today</button>
        </div>
    </div>
  </div>
</div>


</aside>
{% endblock %}