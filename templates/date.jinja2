{% extends "base.jinja2" %}
{% block body %}
<p>{{ readable_date }}</p>
<table class="tables" border="1px" width="600px">
    {% for event in events %}
    <tr>
        <td width="30%">{{ event[0] }}</td>
        <td width="70%">{{ event[1] }}</td>
    </tr>
    {% endfor %}
</table>
<aside>
    <div class="container">
        <div class="row">
            <form action="{{request.route_url('add')}}" method="POST">
                <input type="hidden" name="date" value="{{ date }}"/>
                <input type="text" class="form-control" aria-label="..." placeholder="Event description" name="description"/>
                    <div class="input-group">
                    <!-- Button and dropdown menu -->
                    <div class="bfh-timepicker" data-mode="12h" data-name="time"></div>
                    <div class="input-group-btn">
                    <button type="button" class="btn btn-default">Repeat</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Never</a></li>
                        <li><a href="#">Every week</a></li>
                        <li><a href="#">Every other week</a></li>
                        <li><a href='#'>Every month</a></li>
                    </ul>
                    <button type="submit" class="btn btn-default">Submit</button>
                  </div>
                </div>
            </form>
        </div>
    </div>
</aside>
{% endblock %}