{% extends "base.jinja2" %}
{% block body %}
<p>{{ readable_date }}</p>
<table class="tables" border="1px" width="600px">
    {% for event in events %}
    <tr>
        <td width="30%">{{ event[0] }}</td>
        <td width="70%">{{ event[1] }}</td>
    </tr>
    {% endfor %}
</table>
<aside>
    <button id="reveal_form" type="button"> + </button>
    <div class="add_event">
        <form action="{{request.route_url('add')}}" method="POST">
                <input type="time" name="time" class="new_entry" width="100px"/>
                <input type="text" size="50" name="description" value="Event description" class="new_entry" width="500px"/>
                <input type="hidden" value="{{ date }}" name="date"/>
                <input type="submit" value="Submit" name="Submit" class="btn"/>
        </form>
    </div>
</aside>
{% endblock %}