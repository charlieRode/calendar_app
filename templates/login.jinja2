{% extends "base.jinja2" %}
{% block body %}
<div class="container" style="width: 970px !important;">
    <h2 class="titles">Login</h2>
    <div class="well">
        {% if error -%}
        <p class="error"><strong>{{ error }}</strong></p>
        {%- endif %}
        <form action="{{ request.route_url('login') }}" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" aria-label="..."/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" aria-label="..."/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
    <h4 class="titles scroll_right"><a href="{{ request.route_url('register') }}">Haven't Registered?</a></h4>
</div>
{% endblock %}