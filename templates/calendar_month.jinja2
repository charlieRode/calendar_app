{% extends "base.jinja2" %}
{% block body %}
<div class="entire_month">
    <div id="month_title">
        <div style="display: inline-block; float: left; height: 60px; width: 60px">
        <form action="{{ request.route_url('calendar_month') }}" method="GET">
            <label for="{{ prev_month }}"><div class="scroll_left"><<</div></label>
            <input class="scroll_left" type="radio" id="{{ prev_month }}" name="month" value="{{ prev_month}}"/>
        </form>
        </div>
        {{ month_name }}
        <div style="display: inline-block; float: right; height: 60px; width: 60px">
        <form action="{{ request.route_url('calendar_month') }}" method="GET">
            <label for="{{ next_month }}"><div class="scroll_right">>></div></label>
            <input class="scroll_right" type="radio" id="{{ next_month }}" name="month" value="{{ next_month }}"/>
        </form>
        </div>
    </div>
    <div id="weekdays">
        <div class="day_of_week">Sunday</div><!--
        --><div class="day_of_week">Monday</div><!--
        --><div class="day_of_week">Tuesday</div><!--
        --><div class="day_of_week">Wednesday</div><!--
        --><div class="day_of_week">Thursday</div><!--
        --><div class="day_of_week">Friday</div><!--
        --><div class="day_of_week">Saturday</div>
    </div>
        <form action="{{ request.route_url('date') }}" method="GET">
            {% for date in dates -%}
            <label for="{{ the_year }}-{{ the_month }}-{{ date }}"><!--
            --><div class="day_block">{{ date }}</div><!--
            --></label><!--
            --><input type="radio" id="{{ the_year }}-{{ the_month }}-{{ date }}" name="date" value="{{ the_year }}-{{ the_month }}-{{ date }}"/>
            {%- endfor %}
        </form>
</div>
{% endblock %}